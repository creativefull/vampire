{{!< default }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<header {{#if image}}" style="background-image: url({{image}});{{/if}}">
	<div class="overlay" {{#if image}} style="background-color: rgba(0,0,0,0.7)" {{/if}}>
	    <div class="container">
	        <div class="row">
	            <div class="col-lg-12">
	                <div class="intro-text">
	                    <span class="name">{{title}}</span>
	                    <span class="skills">{{excerpt words="30"}}</span>
	                </div>
	            </div>
	        </div>
	    </div>
	</div>
</header>

<section style="margin-top:10px">
    <div class="container">
        <div class="row">
        	<div class="col-md-2">
        	</div>
        	<div class="col-md-8">
		    	<div class="row">
		    		<time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" on "}}
		    		<h1 style="margin-top:5px">{{title}}</h1>
		    		<hr/>
		    	</div>
		    	<div class="row">
		    		By {{author}}
		    		<br><br>
		    		<div class="line"></div>
		    	</div>
		    	<div class="row">
			        <section class="post-content">
			            {{content}}
			        </section>
		    	</div>
        	</div>
        	<div class="col-md-2">
        	</div>
		</div>
	</div>
</section>

{{#if author}}
	{{> post_author }}
{{/if}}

{{/post}}