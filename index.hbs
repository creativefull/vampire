{{!< default }}

<header {{#if @blog.cover}} style="background-image:url({{@blog.cover}})"{{/if}}>
    <div class="overlay" {{#if @blog.cover}} style="background-color: rgba(0,0,0,0.7)" {{/if}}>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <span class="name">{{@blog.title}}</span>
                        {{#if @blog.cover}}
                        {{else}}
                            <hr class="star-light">
                        {{/if}}
                        <span class="skills">{{@blog.description}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        <div class="row">
			{{> "post" }}
		</div>
        {{pagination}}
    </div>
</section>

